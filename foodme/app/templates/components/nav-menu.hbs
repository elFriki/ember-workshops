{{! Bootstrap Navbar }}
<div id="custom-bootstrap-menu" class="navbar navbar-default " role="navigation">
<div class="container-fluid ">

    <div class="navbar-header">
    	{{! Collapsed menu for small screens }}
		<button {{action 'toggleMenu'}} type="button" class="navbar-toggle {{unless isMenuOpened 'collapsed'}}" data-toggle="collapse" data-target="#navbar" aria-controls="navbar">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>

    	{{! Brand with link }}
    	{{link-to appName "index" class="navbar-brand"}}
    </div>

    <div class="collapse navbar-collapse {{if isMenuOpened 'in'}}" id="navbar">

    	{{! Menu links}}
        <ul class="nav navbar-nav">
        	{{#each menuLinks as |link|}}
        		<li>{{link-to (t link.label) link.url}}</li>
          {{/each}}
            <li><a target="_blank" href="http://bootstrapdesigntools.com/tools/bootstrap-progress-bar-designer/">blog</a></li>
        </ul>

    	{{! ChangeLanguage}}
		<ul class="nav navbar-nav navbar-right">
      {{#if logado}}
      <li class="for-button"><button class="btn btn-danger"><i class="glyphicon glyphicon-off"></i></button></li>
        {{else}}
        <li class="for-button"><button class="btn btn-success"><i class="glyphicon glyphicon-off"></i></button></li>
      {{/if}}
			<li class="for-button">
				{{#power-select
					selected=selectedLanguage
					options=languages
					class='dropdown'
					onchange=(action (mut selectedLanguage))
					as |language|}}
<span><img src="{{language.flagUrl}}" class="icon-flag" alt="{{language.name}}"></span>
				{{/power-select}}
			</li>
		</ul>

    </div>

  </div>
</div>
