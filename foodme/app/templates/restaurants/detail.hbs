<div class="col-md-5">

	<ul class="list-group">
		<li class="list-group-item active">
			<span class="badge list-group-item-warning">{{link-to "" "restaurants" class="span glyphicon glyphicon-backward"}}</span>
			<h2>{{model.name}}</h2>
		</li>
		<li class="list-group-item active">{{model.description}}</li>
		<li class="list-group-item">
			<img src="{{restaurant-img model.id}}" width="100%" height="100%" class="img-responsive" alt="Generic placeholder thumbnail">
		</li>
		  <li class="list-group-item">
		    <span class="badge list-group-item-warning"><i class="glyphicon glyphicon-tag"></i></span>
		    {{capitalize model.cuisine}}
		  </li>
		  <li class="list-group-item">
		    <span class="badge list-group-item-warning"><i class="glyphicon glyphicon-map-marker"></i></span>
		    {{capitalize model.location}}
		  </li>
		  <li class="list-group-item">
		    <span class="badge list-group-item-warning"><i class="glyphicon glyphicon-heart"></i></span>
		    {{star-rating rating=model.rating}}
		  </li>
			<li class="list-group-item">
		    <span class="badge list-group-item-warning"><i class="glyphicon glyphicon-eur"></i></span>
		    {{star-rating rating=model.price}}
		  </li>
	</ul>

</div>


<div class="col-md-4">

	<ul class="list-group">
	  <li class="list-group-item active">
			<span class="badge list-group-item-warning">{{link-to "" "restaurants" class="span glyphicon glyphicon-backward"}}</span>
			{{t 'menu'}}
		</li>
		{{#each model.menuItems as |item|}}
		  <li class="list-group-item">
		    <span class="badge list-group-item-warning">{{item.price}} â‚¬</span>
		    {{capitalize item.name}}
		  </li>
		{{/each}}
	</ul>

</div>


<div class="col-md-3">

	<ul class="list-group">
	  <li class="list-group-item active">
			<span class="badge list-group-item-warning">{{link-to "" "restaurants" class="span glyphicon glyphicon-backward"}}</span>
			{{t 'openingHours'}}
		</li>
		{{#each model.days as |day|}}
		  <li class="list-group-item">
		    <span class="badge list-group-item-danger">{{model.closes}}</span>
		    <span class="badge list-group-item-success">{{model.opens}}</span>
		    {{capitalize (t (concat 'weekDays.' (weekday day)))}}
		  </li>
		{{/each}}
	</ul>

</div>
