<div class="container-fluid">
<div class="panel panel-primary" style="background-image:url('{{restaurant-img model.id}}'); background-repeat:no-repeat; background-size: cover;">


  <a class="btn btn-primary" href="#/festivals" style="opacity:0.6">
    <span class="badge"><i class="glyphicon glyphicon-backward"></i> {{model.name}}</span>
  </a>


<div class="panel-body">

<div class="col-md-5">

	<ul class="list-group">
    <li class="list-group-item active" style="opacity:0.6"><strong>{{model.name}}</strong></li>
    <li class="list-group-item" style="opacity:0.9"><strong>{{model.description}}</strong></li>

    <li class="list-group-item" style="opacity:0.6">
		    <span class="badge list-group-item-info"><i class="glyphicon glyphicon-tag"></i></span>
		    <strong>{{capitalize model.cuisine}}</strong>
		  </li>
      <li class="list-group-item" style="opacity:0.6">
		    <span class="badge list-group-item-info"><i class="glyphicon glyphicon-map-marker"></i></span>
		    <strong>{{capitalize model.location}}</strong>
		  </li>
      <li class="list-group-item" style="opacity:0.6">
		    <span class="badge list-group-item-info"><i class="glyphicon glyphicon-heart"></i></span>
		    <strong>{{star-rating rating=model.rating}}</strong>
		  </li>
      <li class="list-group-item" style="opacity:0.6">
		    <span class="badge list-group-item-info"><i class="glyphicon glyphicon-eur"></i></span>
		    <strong>{{star-rating rating=model.price}}</strong>
		  </li>


		{{#each model.days as |day|}}
    <li class="list-group-item" style="opacity:0.6">
      <span class="badge list-group-item-info"><i class="glyphicon glyphicon-time"></i></span>
      <span class="badge list-group-item-danger">{{model.closes}}</span>
	    <span class="badge list-group-item-success">{{model.opens}}</span>
	    <strong>{{capitalize (t (concat 'weekDays.' (weekday day)))}}</strong>
	  </li>
		{{/each}}
	</ul>

</div>


<div class="col-md-7">

	<ul class="list-group">
	  <li class="list-group-item active"  style="opacity:0.6">
			<strong>{{t 'artists'}}</strong>
		</li>
		{{#each model.menuItems as |item|}}
      <li class="list-group-item" style="opacity:0.6">
		    <span class="badge list-group-item-warning">{{item.price}} â‚¬</span>
		    <strong>{{capitalize item.name}}</strong>
		  </li>
		{{/each}}
	</ul>

</div>


</div>
</div>
</div>
